#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>
#include <errno.h>
#include <cstdlib.h>

int bootkey()
{
	int fd;
	char buf[2];
	ssize_t count;
	fd = open("/dev/bootkey", O_RONLY);
	read(fd, buf, count);	
	close(fd);
	return(atoi(buf));	
}

int main(void)
{

	while(1)
	{
		while(bootkey==1)
		{
			printf("Bootkey Pressed");
		}				
	}
	  
	return 0;
}



